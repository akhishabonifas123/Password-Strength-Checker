import tkinter as tk
from tkinter import messagebox
import string

def evaluate_password():
    password = entry.get()
    score = 0
    
    # Logic Criteria
    has_len = len(password) >= 8
    has_digit = any(c.isdigit() for c in password)
    has_upper = any(c.isupper() for c in password)
    has_lower = any(c.islower() for c in password)
    has_special = any(c in string.punctuation for c in password)

    # Scoring
    if has_len: score += 1
    if has_digit: score += 1
    if has_upper and has_lower: score += 1
    if has_special: score += 1

    # Update UI based on Score
    if score <= 1:
        result_label.config(text="Strength: Weak", fg="#e74c3c") # Red
    elif score < 4:
        result_label.config(text="Strength: Medium", fg="#f1c40f") # Yellow
    else:
        result_label.config(text="Strength: Strong", fg="#2ecc71") # Green

# --- UI Setup ---
root = tk.Tk()
root.title(" Password Strength Checker")
root.geometry("400x250")
root.config(padx=20, pady=20)

# Instructions
label = tk.Label(root, text="Enter your password to check its strength:", font=("Arial", 10))
label.pack(pady=10)

# Input Field
entry = tk.Entry(root, show="*", width=30, font=("Arial", 12))
entry.pack(pady=5)

# Check Button
check_btn = tk.Button(root, text="Check Strength", command=evaluate_password, 
                      bg="#3498db", fg="white", font=("Arial", 10, "bold"))
check_btn.pack(pady=10)

# Strength Result Display
result_label = tk.Label(root, text="Strength: ---", font=("Arial", 14, "bold"))
result_label.pack(pady=10)

root.mainloop()